<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff999e">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:button="@null"
            android:gravity="center"
            android:text="我的"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="申请达人"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_user_avatar" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_alignLeft="@id/header_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28dp"
            android:scaleType="centerCrop"
            android:src="@drawable/lab_level_crown5" />

        <TextView
            android:id="@+id/header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/header_img"
            android:text="名字"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/header_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/header_name"
            android:layout_below="@id/header_name"
            android:layout_marginTop="10dp"
            android:text="关注" />

        <TextView
            android:id="@+id/header_guanzhunum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header_guanzhu"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/header_guanzhu"
            android:text="0"
            android:textColor="#f00" />

        <TextView
            android:id="@+id/header_fensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header_guanzhu"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/header_guanzhunum"
            android:text="粉丝" />

        <TextView
            android:id="@+id/header_fensinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header_guanzhu"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/header_fensi"
            android:text="0"
            android:textColor="#f00" />

        <ImageView
            android:id="@+id/header_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header_guanzhu"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/header_fensinum"
            android:src="@drawable/icon_task_money" />

        <TextView
            android:id="@+id/header_yuanzibi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header_guanzhu"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/header_money"
            android:text="元子币" />

        <TextView
            android:id="@+id/header_yuanzibinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header_guanzhu"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/header_yuanzibi"
            android:text="0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_user_arrow" />
        <!--TODO 经验条-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignRight="@id/header_yuanzibi"
            android:layout_alignLeft="@id/header_guanzhu"
            android:layout_below="@id/header_guanzhu"
            android:layout_marginTop="13dp"
            android:background="@drawable/backgroundmyself2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignRight="@id/header_fensinum"
            android:layout_alignLeft="@id/header_guanzhu"
            android:layout_below="@id/header_guanzhu"
            android:layout_marginTop="13dp"
            android:background="@drawable/background3"
            />
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/header_yuanzibi"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/header_guanzhu"
            android:layout_marginTop="13dp"
            android:text="6"
            android:textColor="#ff999e"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_header"
            android:layout_alignBottom="@id/tv_header"
            android:text="/10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_header"
            android:layout_alignLeft="@id/header_guanzhu"
            android:text="还差5个经验值就能升到下一级哟"
            android:layout_marginTop="8dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/icon_user_release"
            android:gravity="center"
            android:text="我发布的" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/icon_user_event"
            android:gravity="center"
            android:text="我的活动" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/icon_user_my_order"
            android:gravity="center"
            android:text="订单" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/icon_user_my_collect"
            android:gravity="center"
            android:text="收藏" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#eee" />

    <include layout="@layout/myself_content_card" />
</LinearLayout>