<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/three_item_img1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/welcome_page_four" />

        <TextView
            android:id="@+id/three_item_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/three_item_img1"
            android:layout_toRightOf="@id/three_item_img1"
            android:text="卓美月卡--福利来袭！"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/three_item_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/three_item_title1"
            android:layout_below="@id/three_item_title1"
            android:layout_marginTop="2dp"
            android:text="2016-10-09 10:26"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/three_item_money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/three_item_title1"
            android:layout_below="@id/three_item_time1"
            android:layout_marginTop="2dp"
            android:text="北京市朝阳区慧忠里103号"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/three_item_img1"
            android:layout_alignLeft="@id/three_item_money1"
            android:text="¥ 30.00"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/three_item_img1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="1人参与"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>